{
  "name": "zengine-svelte",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:restart": "fuser -k 5173/tcp || true && vite",
    "build": "svelte-kit sync && vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --compiler-warnings \"options_missing_custom_element:ignore\"",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --compiler-warnings \"options_missing_custom_element:ignore\"",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "lint": "run-p lint:eslint lint:stylelint",
    "lint:fix": "run-p lint:eslint:fix lint:stylelint:fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:stylelint": "stylelint \"src/**/*.{css,svelte}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{css,svelte}\" --fix"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@tiptap/core": "^3.18.0",
    "@tiptap/extension-character-count": "^3.18.0",
    "@tiptap/extension-code-block-lowlight": "^3.18.0",
    "@tiptap/extension-highlight": "^3.18.0",
    "@tiptap/extension-image": "^3.18.0",
    "@tiptap/extension-placeholder": "^3.18.0",
    "@tiptap/extension-table": "^3.18.0",
    "@tiptap/extension-table-cell": "^3.18.0",
    "@tiptap/extension-table-header": "^3.18.0",
    "@tiptap/extension-table-row": "^3.18.0",
    "@tiptap/extension-task-item": "^3.18.0",
    "@tiptap/extension-task-list": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "autolinker": "^4.1.5",
    "highlight.js": "^11.11.1",
    "isomorphic-dompurify": "^2.35.0",
    "lowlight": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.12.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/node22": "^22.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/eslint-plugin": "1.6.6",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.12.0",
    "globals": "^17.3.0",
    "jsdom": "^27.4.0",
    "npm-run-all2": "^8.0.4",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.0",
    "stylelint": "^17.3.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-order": "^7.0.1",
    "svelte": "^5.25.0",
    "svelte-check": "^4.3.3",
    "svelte-eslint-parser": "^1.4.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
