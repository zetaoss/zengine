<div id="app" class="min-h-screen flex flex-col">
  <header id="navbar" class="text-sm bg-slate-700 text-white">
    <div class="flex flex-wrap items-center max-w-8xl mx-auto w-full">
      <div class="order-1 flex items-stretch h-12">
        <a href="/" class="navlink">
          <img alt="zetawiki" src="/zeta.svg" class="h-6 w-6" />
        </a>
        <a href="/" class="navlink !text-yellow-200">위키</a>
        <a href="/forum" class="navlink">포럼</a>
        <a href="/tool/common-report" class="navlink">도구</a>
      </div>
      <div class="order-2 contents md:flex md:items-stretch md:ml-auto md:w-auto md:flex-1 md:max-w-2xl">
        <div class="md:group order-2 ml-auto contents md:relative md:inline-block">
          <user-menu></user-menu>
        </div>
        <div class="order-3 basis-full min-w-0 md:order-1 md:basis-auto md:flex-1">
          <c-search></c-search>
        </div>
      </div>
    </div>
  </header>
  <main class="flex-1 w-full max-w-8xl mx-auto">
    <div class="flex flex-row {{#hasBinders}}has-binders{{/hasBinders}}">
      {{#hasBinders}}
      <binder-apex></binder-apex>
      {{/hasBinders}}

      <div class="flex-auto">
        <div class="p-4 py-8 md:p-8">
          <div class="pt-4">
            <h1>{{{ html-title }}}</h1>
            {{#html-subtitle}}
            <div>{{{ html-subtitle }}}</div>
            {{/html-subtitle}}
          </div>
          <div class="pb-4"> 
            <div class="flow-root py-2">
              <div class="float-left">
                {{#hasMeta}}
                <page-meta historyhref="{{ historyHref }}"></page-meta>
                {{/hasMeta}}
              </div>

              <div class="flex float-right">
                {{#arrayButtons}}
                {{^current}}
                <a class="page-btn" {{#id}}id="{{.}}"{{/id}} {{#title}}title="{{.}}"{{/title}} {{#accesskey}}accesskey="{{.}}"{{/accesskey}} href="{{href}}">{{text}}</a>
                {{/current}}
                {{/arrayButtons}}

                <page-menu></page-menu>
              </div>
            </div>

            {{#ads}}
            <div class="flex justify-center pb-4">
              <c-ads class="z-ads-wide" client="{{ads.client}}" slot="{{ads.slotTop}}"></c-ads>
            </div>
            {{/ads}}

            {{#data-portlets.data-category-normal.html-items}}
            <ul class="page-cats">{{{ . }}}</ul>
            {{/data-portlets.data-category-normal.html-items}}
          </div>
          <hr />

          {{#hasToc}}
          <div class="toc-inline">
            <toc-apex></toc-apex>
          </div>
          {{/hasToc}}

          <article id="content" data-mw-ve-target-container class="py-6 pb-10">
          {{{ html-body-content }}}
          </article>

          {{#ads}}
          <div class="flex justify-center pb-4">
            <c-ads class="z-ads-wide" client="{{ads.client}}" slot="{{ads.slotBottom}}"></c-ads>
          </div>
          {{/ads}}

          {{#data-portlets.data-category-normal.html-items}}
          <ul class="page-cats">{{{ . }}}</ul>
          {{/data-portlets.data-category-normal.html-items}}
          <br>

          {{#hasMeta}}
          <page-footer></page-footer>
          {{/hasMeta}}
        </div>
      </div>

      {{#hasToc}}
      <div class="toc-side flex-none w-60 pr-3">
        <toc-apex side></toc-apex>
      </div>
      {{/hasToc}}

    </div>
  </main>

  <c-site-footer></c-site-footer>
  <c-site-remocon></c-site-remocon>
</div>
