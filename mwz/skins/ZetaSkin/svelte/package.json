{
  "name": "zetaskin-svelte",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:restart": "fuser -k 5174/tcp || true && sleep 1 && vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "watch": "vite build --watch",
    "build-only": "vite build",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "run-p lint:eslint lint:stylelint",
    "lint:fix": "run-p lint:eslint:fix lint:stylelint:fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:stylelint": "stylelint \"src/**/*.{css,svelte}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{css,svelte}\" --fix"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@mdi/js": "^7.4.47",
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^25.1.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.39.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-svelte": "^3.12.0",
    "globals": "^17.3.0",
    "npm-run-all2": "^8.0.4",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.0",
    "stylelint": "^17.3.0",
    "stylelint-config-recess-order": "^7.6.1",
    "stylelint-order": "^7.0.1",
    "svelte": "^5.25.0",
    "svelte-check": "^4.3.3",
    "svelte-eslint-parser": "^1.4.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1"
  }
}
